@using DapperWithSQL.ViewModel
@model IEnumerable<MovieViewModel>
@{
    ViewData["Title"] = "Movie";
    var i = 1;
}

<style>
    a {
        text-decoration:none;
        color:white;
    }
    a:hover{
        color:white;
    }
</style>

<div class="row">

    <h3 class="col-sm-8">
        Movie List
    </h3>
    <button class="btn btn-primary col-sm-2 m-0 p-0">
        <a class="nav-link text-white" asp-area="" asp-controller="Movie" asp-action="AddMovie" style="font-weight:bold">Add Movie</a>
    </button>
</div>


<table class="table">
    <tr>
        <th>S.N</th>
        <th class="col-sm-3">Movie Name</th>
        <th class="col-sm-3">Movie Price</th>
        <th class="col-sm-3">Movie Category</th>
        <th class="col-sm-2">Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(i++)
            </td>
            <td>
                @item.Movie_Name
            </td>
            <td>
                @item.Movie_Price
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                <button class="btn btn-secondary" >
                    <a  asp-action="UpdateMovie" asp-controller="Movie" asp-route-id="@item.Id">Edit</a>
                </button> &nbsp;
                <button class="btn btn-danger">
                    <a asp-action="DeleteMovie" asp-controller="Movie" asp-route-id="@item.Id">Delete</a>
                </button>
            </td>
        </tr>
    }

</table>
